<Window x:Class="GlobusApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlobusApp"

        mc:Ignorable="d"
        Title="Globus" Height="450" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel x:Name="NavigationMenu" Grid.Row="0" Orientation="Horizontal" Visibility="Visible">
            <Button x:Name="Toursnav" Content="Туры" Width="50" Height="30" Click="ToursNavClick"></Button>
            <Button x:Name="Applicationsnav" Content="Заявки" Width="50" Height="30" Click="Applicationsnav_Click"></Button>
        </StackPanel>

        <Frame x:Name="MainFrame" VerticalAlignment="Stretch" Grid.Row="2" BorderThickness="0">
            
        </Frame>

    </Grid>
</Window>
