<Page x:Class="GlobusApp.Applications"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlobusApp"
        mc:Ignorable="d"
        Title="Applications">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel x:Name="SearchMenu" Grid.Row="0" Orientation="Horizontal" Visibility="Visible">
            <Label x:Name="SearchHint" Content="Поиск" Width="50" Height="30"/>
            <TextBox x:Name="SearchBar" Width="200" Height="30" TextChanged="SearchBar_TextChanged"></TextBox>
            <Label x:Name="SortHint" Content="Статус:" Width="96" Height="30"></Label>
            <ComboBox x:Name="SortBox" Width="132" Height="30" SelectionChanged="SortBox_SelectionChanged"/>
            <Label x:Name="DataSortHint" Content="Сортировать по дате:" Width="128" Height="30" Margin="10,0,0,0"></Label>
            <ComboBox x:Name="DataSortBox" Width="132" Height="30" SelectionChanged="DataSortBox_SelectionChanged"/>
            <Button x:Name="AddApplication" Width="130" Height="30" Content="Добавить заявку" Margin="10,0,0,0" Click="AddClickButton_Click"></Button>
        </StackPanel>
        <ListView x:Name="ApplicationsView" Grid.Row="1"  SelectedItem="{Binding SelectedTour}" MouseDoubleClick="ApplicationsView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID"
                            DisplayMemberBinding="{Binding Id}" />

                    <GridViewColumn Header="Пользователь"
                            DisplayMemberBinding="{Binding User.FullName}" />

                    <GridViewColumn Header="Дата брогирования"
                            DisplayMemberBinding="{Binding Date}" />
                    <GridViewColumn Header="Название тура"
                            DisplayMemberBinding="{Binding Tour.Name}" />

                    <GridViewColumn Header="Страна"
                            DisplayMemberBinding="{Binding Tour.Country.CountryName}" />

                    <GridViewColumn Header="Количество человек"
                            DisplayMemberBinding="{Binding NumberOfPeople}" />

                    <GridViewColumn Header="Итоговая стоимость"
                            DisplayMemberBinding="{Binding TotalCost}" />

                    <GridViewColumn Header="Статус"
                            DisplayMemberBinding="{Binding Status.Status}" />

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
