<Page x:Class="GlobusApp.TourPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GlobusApp"
      mc:Ignorable="d" 
      Title="TourPage">
    <Page.Resources>
        <local:TourHighlightConverter x:Key="TourHighlightConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel x:Name="SearchMenu" Grid.Row="0" Orientation="Horizontal" Visibility="Visible">

            <Label x:Name="SearchHint" Content="Поиск" Width="50" Height="30"/>
            <TextBox x:Name="SearchBar" Width="200" Height="30" TextChanged="Tours_TextChanged"/>
            <Label x:Name="SortHint" Content="Сортировка по" Width="95" Height="30"></Label>
            <ComboBox x:Name="SortBox" Width="132" Height="30"/>
        </StackPanel>
        <ListBox x:Name="ToursCard" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto" BorderThickness="0" Background="Transparent" Margin="0,0,0,0">

                <ListBox.ItemTemplate>
                    <DataTemplate>

                    <Border BorderBrush="#E0E0E0" Background="{Binding Converter={StaticResource TourHighlightConverter}}" BorderThickness="1" CornerRadius="8" Margin="5" Padding="10">
                            <!--Background="{Binding Sale, Converter={StaticResource DiscountToBrushConverter}}"-->
                            <Grid Width="900" x:Name="container">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="50"></RowDefinition>
                                </Grid.RowDefinitions>
                                <!-- Изображение товара -->
                                <Image Source="{Binding ImageFullPath}" Grid.Column="0" Stretch="Uniform"/>

                                <!-- Информация о товаре -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:Name="NameText"  Text="{Binding Name}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock x:Name="Country"  Text="Страна:"/>
                                        <TextBlock x:Name="CountryText" Text="{Binding Country.CountryName}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="0,5,0,0">
                                        <TextBlock Text="Продолжительность: "/>
                                        <TextBlock x:Name="DurationText"  
                        Text="{Binding Duration}"/>
                                    </StackPanel>

                                </StackPanel>
                                <StackPanel Grid.Column="2"  Margin="10,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Цена: "/>
                                        <TextBlock x:Name="TourPriceText" 
   
                            Text="{Binding Price}" 
                            Margin="5,0,0,0"/>
                                    </StackPanel>


                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Свободных мест: "/>
                                        <TextBlock x:Name="SeatsAvalibleText"
                            Text="{Binding SeatsNotTaken}" 

                            Margin="5,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel  Orientation="Horizontal" Grid.Column="0" Grid.Row="1"  Margin="10,0,0,0">

                                    <TextBlock Text="Дата начала: "/>
                                    <TextBlock x:Name="StartDateText"

                            Text="{Binding StartDate}" 

                            Margin="5,0,0,0"/>

                                </StackPanel>

                            </Grid>
                        </Border>

                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Page>
